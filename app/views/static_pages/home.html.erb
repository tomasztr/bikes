<div class='text-center'>
  <h1>Rent Bike!</h1>
  <br>
  <% if current_user.present? %>
    <%= link_to 'Bikes', control_panel_bikes_path, class: 'btn btn-success btn-lg'  %>
    <%= link_to 'LOGOUT', destroy_user_session_path, method: :delete, class: 'btn btn-danger btn-lg' %>
  <% else %>
    <%= link_to 'Sign In', new_user_session_path, class: 'btn btn-primary btn-lg' %>
    <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-success btn-lg' %>
  <% end %>
</div>
